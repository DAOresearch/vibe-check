{
  "name": "@dao/vibe-check",
  "version": "0.1.0",
  "description": "Automation and Evaluation framework for Claude Code agents, built on Vitest v3",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DAOresearch/vibe-check"
  },
  "bugs": {
    "url": "https://github.com/DAOresearch/vibe-check/issues"
  },
  "homepage": "https://daoresearch.github.io/vibe-check",
  "keywords": [
    "claude-code",
    "testing",
    "automation",
    "evaluation",
    "vitest",
    "ai-agents",
    "llm",
    "benchmarking"
  ],
  "license": "MIT",
  "author": "DAO Research",
  "scripts": {
    "lint": "bun x biome check --write",
    "lint:summary": "bun x biome check --write --reporter=summary",
    "typecheck": "bun x tsc --noEmit",
    "check": "bun run lint:summary && bun run typecheck && bun run docs:lint-md && bun run docs:check",
    "dev": "bun run src/index.ts",
    "clean:dev": "rm -rf .dev",
    "clean:test": "rm -rf .dev/reports .dev/screenshots",
    "docs:dev": "astro dev",
    "docs:build": "astro build",
    "docs:preview": "astro preview",
    "docs:check": "astro check",
    "docs:lint-md": "markdownlint 'docs/**/*.md' 'docs/**/*.mdx' '*.md'",
    "docs:lint-md:fix": "markdownlint 'docs/**/*.md' 'docs/**/*.mdx' '*.md' --fix",
    "docs:check-links": "linkinator dist --recurse --skip 'http://localhost:*' --skip 'https://github.com/DAOresearch/vibe-check/issues/*' --skip 'https://github.com/DAOresearch/vibe-check/discussions/*' --skip '/vibe-check/' --timeout 10000 --retry"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/starlight": "^0.36.0",
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "astro": "^5.14.1",
    "lefthook": "^1.13.5",
    "linkinator": "^7.0.1",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "sharp": "^0.34.4",
    "starlight-ion-theme": "^2.3.1",
    "ultracite": "5.4.5",
    "winston": "^3.18.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
